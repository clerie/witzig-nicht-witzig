{

  "manifest_version": 2,
  "name": "Witzig! - Nicht Witzig!",
  "version": "1.1",

  "description": "Replaces the thumb up and down in YouTube with a Witzig! and a Nicht Witzig! stamp.",

  "icons": {
    "73": "media/icon-witzig-73.png",
    "228": "media/icon-witzig-228.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "witzig.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "media/*"
  ]

}
